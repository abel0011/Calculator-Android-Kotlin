<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:layout_gravity="fill"
    android:layout_weight="1"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtPrincipal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:ems="10"
        android:gravity="right|bottom"
        android:textSize="36sp"
        android:layout_weight="1"/>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt"
        >

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:textSize="20sp"
            android:text="C"
            />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:textSize="20sp"
            android:text="+/-"
            />

        <Button
            android:id="@+id/btnPorcentaje"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:textSize="20dp"
            android:text="%"
            />

        <Button
            android:id="@+id/btnDividir"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:textSize="20dp"
            android:text="c"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btnSiete"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnOcho"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btnNueve"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btnMultiplicar"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="*"
            />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/btnCuatro"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="4"
            />
        <Button
            android:id="@+id/btnCinco"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="5"
            />
        <Button
            android:id="@+id/btnSeis"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="6"
            />
        <Button
            android:id="@+id/btnResta"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="-"
            />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <Button
            android:id="@+id/btnUno"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="1"
            />
        <Button
            android:id="@+id/btnDos"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="2"
            />
        <Button
            android:id="@+id/btnTres"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="3"
            />
        <Button
            android:id="@+id/btnSuma"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="+"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btnMasMenosDos"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="+/-"
            />
        <Button
            android:id="@+id/btnCero"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="0"
            />

        <Button
            android:id="@+id/btnPunto"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="."
            />
        <Button
            android:id="@+id/btnIgual"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@android:color/holo_purple"
            android:text="="
            />
    </TableRow>
</TableLayout>







</LinearLayout>